# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# rules for all files
[**]
	# character encoding
	charset = utf-8

	# indent style and size
	indent_style = tab
	indent_size = 2

	# delete spaces
	trim_trailing_whitespace = true

	# default quote
	quote_type = single

	# Max line length
	max_line_length = 120

	# Unix-style newlines with a newline ending every file
	insert_final_newline = true
	end_of_line = lf

# rules for .json, .yml
[*.{json,yml}]
	indent_style = space
	indent_size = 2

# rules for .svg
[*.svg]
	# no final newline on svg
	insert_final_newline = false

# rules for .md (markdown)
[*.md]
	# do not delete spaces
	trim_trailing_whitespace = false

# rules for .html
[*.html]
	max_line_length = off
